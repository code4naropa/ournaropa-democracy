  <div class="row">

    <div class="col s12">

      <%= render :partial => "ournaropa_decisions/mock_ups/render_author",
          :locals => {:author => "Naropa"} %>


      <div class="decision z-depth-2">
        <div class="row">
          <div class="content-wrapper">

            <div class="content grey-text">
